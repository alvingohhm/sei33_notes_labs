<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header"), {PageTitle} %>
  <body>
    <main class="container">
      <div class="bg-light p-5 rounded mt-3 row">
        <div class="d-md-block">
          <a class="btn btn-lg btn-primary" href="/" role="button"
            >Back to Products</a
          >
        </div>
      </div>
      <div class="d-flex justify-content-center my-3 text-center">
        <div class="card mb-4 rounded-3 shadow-sm" style="width: 30rem">
          <div class="card-header py-2" style="background-color: #25b7f1">
            <h4 class="my-0 fw-normal"><%= product.name %></h4>
          </div>
          <div class="card-body">
            <img
              src="<%= product.img %>"
              class="rounded card-img card-img"
              alt="<%= product.name %>"
            />
            <p><%=product.description %></p>
            <p>PRICE: <%=product.price %></p>
            <h5 class="text-<%= product.qty > 0 ? 'primary' : 'danger' %>">
              <%= product.qty > 0 ? product.qty + " remaining" : "OUT OF STOCK"
              %>
            </h5>
            <a
              class="btn btn-lg btn-primary mt-2<%= product.qty > 0 ? null : ' disabled' %>"
              href="/buy/<%= product._id%>?_method=POST"
              role="button"
              >BUY</a
            >
          </div>
          <a class="mb-2" href="/product/<%= product._id%>/edit"
            >Edit this product</a
          >
          <div class="card-footer" style="background-color: #25b7f1">
            <a
              class="btn btn-danger"
              href="/product/<%= product._id%>?_method=DELETE"
              role="button"
              >DELETE</a
            >
          </div>
        </div>
      </div>
    </main>
    <%- include("partials/footer") %>
  </body>
</html>
