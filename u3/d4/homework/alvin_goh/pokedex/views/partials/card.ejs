<div class="col">
  <div class="card mb-4 rounded-3 shadow-sm">
    <div class="card-header py-3" style="background-color: #f19825">
      <h4 class="my-0 fw-normal"><%= name %></h4>
    </div>
    <div class="card-body">
      <a href="/pokemon/<%=id%>">
        <img src="<%= img %>" class="rounded card-img" alt="<%= name %>" />
      </a>
      <div class="mt-3">
        <!-- prettier-ignore -->
        <% type.map((item)=> { %>
        <span class="badge rounded-pill bg-secondary"><%= item %></span>
        <% }) %>
      </div>
    </div>
    <div class="card-footer" style="background-color: #f19825">
      <a
        href="/pokemon/<%=id%>/edit"
        class="card-link text-decoration-none fw-bold fw-bold text-black"
        >Edit</a
      >
      <a
        href="/pokemon/<%=id %>?_method=DELETE"
        class="card-link text-decoration-none fw-bold text-black"
        >Delete</a
      >
    </div>
  </div>
</div>
